<!-- views/login.ejs -->
<!doctype html>
<html ng-app="authApp">
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<style>
		body 		{ padding-top:80px; }
	</style>

	<!-- SPELLS -->
	
	<!-- bower:js -->
	<script src="/components/jquery/dist/jquery.js"></script>
	<script src="/components/angular/angular.js"></script>
	<script src="/components/angular-resource/angular-resource.js"></script>
	<script src="/components/angular-cookies/angular-cookies.js"></script>
	<script src="/components/angular-sanitize/angular-sanitize.js"></script>
	<script src="/components/angular-ui-router/release/angular-ui-router.js"></script>
	<!-- endbower -->
	
	<script src="/js/app.min.js"></script>
</head>
<body ng-controller="authController">
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span> Login</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form>
		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" name="username"  ng-model="formData.username">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password"  ng-model="formData.password">
		</div>

		<button type="submit" class="btn btn-warning btn-lg" ng-click="login()">Login</button>
	</form>

	<hr>

	<p>Need an account? <a href="/signup">Signup</a></p>
	<p>Or go <a href="/">home</a>.</p>

</div>

</div>
</body>
</html>